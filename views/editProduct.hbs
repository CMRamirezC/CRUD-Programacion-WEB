<center>
<form action="/api/product/{{products._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-floating mb-2 col-sm-6">
        <input id="Name" type="text" class="form-control" name="name" value="{{products.name}}">
        <label for="Name">Nombre</label>
    </div>
    <div class="form-floating col-sm-6">
        <div class="input-group mb-2">
            <span class="input-group-text">$</span>
            <div class="form-floating col-sm-6">
                <input type="number" class="form-control" id="price" name="price" value="{{products.price}}" aria-label="Amount (to the nearest dollar)">
                <label for="floatingInput">Precio</label>
            </div>
            <span class="input-group-text">.00</span>
        </div>
    </div>
    <div class="form-floating mb-2 col-sm-6">
        <select class="form-select" id="floatingSelect" name="category" aria-label="Floating label select example">
            <option selected>Selecciona una categoria</option>
            <option selected>{{products.category}}</option>
            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
        <label for="floatingSelect">Categoria:</label>
    </div>
    <div class="form-floating mb-2 col-sm-6">
        <textarea class="form-control" id="description" name="description" style="height: 100px">{{products.description}}</textarea>
        <label for="description">Descripci√≥n:</label>
    </div>
    <div class="form-floating mb-2 col-sm-6">
        <input id="picture" type="text" class="form-control" value="{{products.picture}}" placeholder="Url for your picture" name="picture">
        <label for="picture">Imagen</label>
    </div>
    <button type="submit" class="btn btn-primary">Modificar</button>
    <button type="submit" formaction="/api/product/{{products._id}}?_method=DELETE" method="POST" class="btn btn-primary">Eliminar</button>
</form>
</center>